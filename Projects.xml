<Cases>
	<Case>
		<Enabled>1</Enabled>
		<Title>Pairing Test</Title>
		<Description>
		Please press combine key to enter advertise mode
		</Description>
		<!--
		Mode
		0: Manual
		1: Automatic
		-->
		<Mode>0</Mode>
		<Project Name="Common">
			<Method>OK+Mute</Method>
		</Project>
	</Case>
	<Case>
		<Enabled>1</Enabled>
		<Title>Voice Test</Title>
		<Description>
		Press voice key or click start button to start voice test
		</Description>
		<Project Name="Common">
			<Decoder>Adpcm</Decoder>
			<SampleRate>16</SampleRate>
			<Bitdepth>16</Bitdepth>
		</Project>
	</Case>
	<Case>
		<Title>Reconnect test</Title>
		<Description>
		Put the device into idle mode, and wait for device to be disconnected,
		then press any key to reconnect
		</Description>
		<Project Name="Common">
			<Timeout>60</Timeout>
		</Project>
	</Case>
	<Case>
		<Enabled>0</Enabled>
		<Title>Keys test</Title>
		<Description>
			Press keys of the remote control one by one, and verify test results
		</Description>
		<Project Name="Common">
			<Key name="KEY_UP">
				<Type>0xC</Type>
				<Linux>103</Linux>
				<Hid>0x42</Hid>
			</Key>
			<Key name="KEY_DOWN">
				<Type>0xC</Type>
				<Linux>108</Linux>
				<Hid>0x43</Hid>
			</Key>
			<Key name="KEY_ENTER">
				<Type>0xC</Type>
				<Linux>28</Linux>
				<Hid>0x84</Hid>
			</Key>
			<Key name="KEY_LEFT">
				<Type>0xC</Type>
				<Linux>105</Linux>
				<Hid>0x44</Hid>
			</Key>
			<Key name="KEY_RIGHT">
				<Type>0xC</Type>
				<Linux>106</Linux>
				<Hid>0x45</Hid>
			</Key>
		</Project>
	</Case>
</Cases>